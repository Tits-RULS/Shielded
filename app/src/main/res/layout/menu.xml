<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yelmo" >

    <!-- Info del jugador activo -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1">
        <!-- Nombre de usuario -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"/>
        <!-- Foto de perfil -->
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_pic" />
    </GridLayout>

    <!-- Modos de juego -->
    <!-- Modo Campaña o Historia -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_campana"
        android:onClick="toCampana"/>

    <!-- Modo Partida Rápida u Offline -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_partida"
        android:onClick="toMatch"/>

    <!-- Modo Partida Versus u Online -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_vs"
        android:onClick="toVS"/>

    <!-- Ajustes -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_ajustes"
        android:onClick="toSettings"/>
</LinearLayout>