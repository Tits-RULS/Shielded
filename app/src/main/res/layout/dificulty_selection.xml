<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yelmo" >

    <Button
        android:id="@+id/bt_PvP"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/vs1"
        android:onClick="toTheme" />

    <Button
        android:id="@+id/bt_easy"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bt_PvP"
        android:layout_marginTop="20dp"
        android:onClick="toThemeIA"
       	android:background="@drawable/vse"/>

    <Button
        android:id="@+id/bt_medium"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bt_easy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="toThemeIA"
        android:background="@drawable/vsm" />

    <Button
        android:id="@+id/bt_hard"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bt_medium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="toThemeIA"
        android:background="@drawable/vsh" />

    <Button
        android:id="@+id/server"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bt_hard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="toThemeBT"
        android:background="@drawable/bvs1" />

    <Button
        android:id="@+id/client"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/server"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="toThemeBT"
        android:background="@drawable/vsb" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="SELECCIONA MODO DE JUEGO"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
